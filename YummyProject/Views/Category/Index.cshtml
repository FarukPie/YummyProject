@model List<YummyProject.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <th>@item.CategoryName</th>

            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Delete</a></td>
            <td><a href="#" class="btn btn-info">Update</a></td>
        </tr>
    }


</table>
<br />
<a href="/Category/AddCategory" class="btn btn-primary">Add Category Section</a>
