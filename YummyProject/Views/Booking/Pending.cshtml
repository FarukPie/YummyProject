@model List<YummyProject.Models.Booking>
@{
    ViewBag.Title = "Pending";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Pending Bookings</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Date</th>
        <th>Person Count</th>
        <th>Message</th>
        <th>Action</th>
        <th>Delete</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>@item.BookingDate.ToShortDateString()</td>
            <td>@item.PersonCount</td>
            <td>@item.MessageContent</td>
            <td>
                @using (Html.BeginForm("Accept", "Booking", FormMethod.Post))
                {
                    @Html.Hidden("id", item.BookingID)
                    <button type="submit" class="btn btn-success">Accept</button>
                }
            </td>
            <td>
                <form action="@Url.Action("Delete", "Booking")" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete?');">
                    @Html.Hidden("id", item.BookingID)
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>

            </td>


        </tr>
    }


</table>

