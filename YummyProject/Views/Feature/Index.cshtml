@model List<YummyProject.Models.Feature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feature</h2>

<table class="table table-bordered table-hover">
    <tr>
    <th>#</th>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Video</th>
    <th>Delete</th>
    <th>Update</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <th>@item.FeatureID</th>
                    <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.VideoUrl</td>
                    <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Delete</a></td>
                    <td><a href="#" class="btn btn-info">Update</a></td>
                </tr>
            }
</table>
<br />
<a href="/Feature/AddFeature" class="btn btn-primary">Add New Features</a>