@model List<YummyProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>About</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image Url 1</th>
        <th>Image Url 2</th>
        <th>Top Description</th>
        <th>Item 1</th>
        <th>Item 2</th>
        <th>Item 3</th>
        <th>Description</th>
        <th>Video Url</th>
        <th>Phone Number</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
                <tr>
                    <th>@item.AboutID</th>
                    <td><img src="@item.ImageUrl1" style="width:50px; height:50px" /></td>
                    <td><img src="@item.ImageUrl2" style="width:50px; height:50px" /></td>
                    <td>@item.TopDescription</td>
                    <td>@item.Item1</td>
                    <td>@item.Item2</td>
                    <td>@item.Item3</td>
                    <td>@item.Description</td>
                    <td>@item.VideoUrl</td>
                    <td>@item.PhoneNumber</td>
                    <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Delete</a></td>
                    <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-info">Update</a></td>
                </tr>
            }


</table>
<br />
<a href="/About/AddAbout" class="btn btn-primary">Add About Section</a>

