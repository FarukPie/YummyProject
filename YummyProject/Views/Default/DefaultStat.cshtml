<section id="stats" class="stats section dark-background">

    <img src="/Templates/Yummy/assets/img/stats-bg.jpg" alt="" data-aos="fade-in">

    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotalCategories" data-purecounter-duration="1" class="purecounter"></span>
                    <p>All Categories</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotalChefs" data-purecounter-duration="1" class="purecounter"></span>
                    <p>All Chefs</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.TotalDishes" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Total Products</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.AcceptedBookings" data-purecounter-duration="1" class="purecounter"></span>
                    <p>All Customers</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section>
