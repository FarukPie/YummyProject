@model YummyProject.Models.Message

<br /><br />
@using (Html.BeginForm("Create", "Message", FormMethod.Post, new { @class = "row gy-4 needs-validation", novalidate = "novalidate", @data_aos = "fade-up", @data_aos_delay = "600" }))
{
    <div class="col-md-6">
        @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Your Name", required = "required" })
    </div>

    <div class="col-md-6">
        @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Your Email", type = "email", required = "required" })
    </div>

    <div class="col-md-12">
        @Html.TextBox("Subject", null, new { @class = "form-control", placeholder = "Subject", required = "required" })
    </div>

    <div class="col-md-12">
        @Html.TextArea("MessageContent", null, new { @class = "form-control", rows = "6", placeholder = "Message", required = "required" })
    </div>

    <div class="col-md-12 text-center">
        <button type="submit" class="btn btn-danger">Send Message</button>
    </div>
}
