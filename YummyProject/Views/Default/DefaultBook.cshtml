@model YummyProject.Models.Booking
<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Book A Table</h2>
        <p><span>Book Your</span> <span class="description-title">Stay With Us<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-4 reservation-img" style="background-image: url(/Templates/Yummy/assets/img/reservation.jpg);"></div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">

                @using (Html.BeginForm("Create", "Booking", FormMethod.Post, new { @class = "row gy-4 needs-validation", novalidate = "novalidate" }))
                {
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Your Name", required = "required" })
                        </div>
                        <div class="col-lg-4 col-md-6">
                            @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Your Email", type = "email", required = "required" })
                        </div>
                        <div class="col-lg-4 col-md-6">
                            @Html.TextBox("PhoneNumber", null, new { @class = "form-control", placeholder = "Your Phone", required = "required" })
                        </div>
                        <div class="col-lg-4 col-md-6">
                            @Html.TextBox("BookingDate", null, new { @class = "form-control", type = "date", required = "required" })
                        </div>
                     
                        <div class="col-lg-4 col-md-6">
                            @Html.TextBox("PersonCount", null, new { @class = "form-control", placeholder = "# of people", type = "number", required = "required" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.TextArea("MessageContent", null, new { @class = "form-control", rows = 5, placeholder = "Message" })
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-danger">Book a Table</button>
                    </div>
                }



            </div><!-- End Reservation Form -->

        </div>

    </div>

</section>
