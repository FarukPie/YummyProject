@model List<YummyProject.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Services</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Icon</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>


            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-info">Update</a></td>
        </tr>
    }


</table>
<br />
<a href="/Service/AddService" class="btn btn-primary">Add Service</a>


